---
import "bulma/css/bulma.min.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CallToACtion from "../components/CallToAction.astro";
export interface Props {
  title: string;
  show_call_to_action?: boolean;
}

const { title, show_call_to_action = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="has-navbar-fixed-top">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="https://raw.githubusercontent.com/Intellbg/copelsa_webpage/main/src/images/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="description" content="Construcciones Electricas y mas" />
    <meta name="author" content="USAGICLI" />
    <meta
      name="keywords"
      content="Ingenieria Electrica, electricidad, Ingenieria Mecanica, mecanica, mecaica electrica, quito, ecuador, cosntruccion, alumbrado, redes,armarios, eeq, empresa, cables, instalaciones"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,600,1,0"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@600&family=Open+Sans&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.4/dist/css/bulma-carousel.min.css"
    />

    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />{show_call_to_action && <CallToACtion />}
    <Footer />
  </body>
</html>
<style is:global>
  button.button {
    background-color: #253779;
    color: white;
  }
  button.button:hover {
    background-color: #395d41 !important;
    color: white;
  }
  .title-text {
    font-family: Proza Libre, sans-serif !important;
    font-feature-settings: "smcp";
    font-variant: small-caps;
    color: #253779;
  }
  p {
    text-align: justify;
  }
</style>
