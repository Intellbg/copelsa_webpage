---
export interface Props {
    title: string;
}
const { title } = Astro.props;
import coverImg from "../images/serviciosCover.jpg";
---

<div class="the-header is-marginless">
    <div class="is-6 is-offset-3 is-12-mobile">
        <h1 class="title-text">{title}</h1>
        <img
            class="header-background"
            src={coverImg}
            id="header-background-id"
            alt="background-img"
        />
    </div>
</div>

<style>
    h1 {
        text-align: center;font-size: 3rem !important;
        padding: 3rem;
        color:white !important
    }
    img {
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
    }
    .the-header {
        position: relative;
        padding: 100px 20px;
        min-height: 300px;
    }
    .header-background {
        position: absolute;
        height: 100%;
        width: 100%;
        object-fit: cover;
        z-index: -100;
        bottom: 0;
        left: 0;
        right: 0;
    }
    @media only screen and (max-width: 601px) {
        h1 {
            width: auto;font-size: 2rem;
        }
    }
</style>